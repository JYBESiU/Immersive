<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setting.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingTop="30dp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="5sp"
        android:orientation="horizontal"
        android:id="@+id/user_profile"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"

            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_perm_identity_24"
                />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="30sp"
                android:id="@+id/user_name"
                android:text="User_name"/>

            <TextView
                android:id="@+id/user_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"

                android:layout_marginTop="1dp"
                android:text="User_Id"/>

        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@+id/user_profile"
        android:id="@+id/historyview"
        android:layout_marginTop="20sp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/history"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="플레이 기록"
            android:gravity="center"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="5sp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@+id/historyview"
        android:id="@+id/changeview"
        android:layout_marginTop="20sp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="프로필 변경"
            android:gravity="center"
            android:id="@+id/change"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="5sp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@+id/changeview"
        android:id="@+id/developerview"
        android:layout_marginTop="20sp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/developer"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="개발자 정보"
            android:gravity="center"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="5sp"/>
    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gametest"
        app:layout_constraintTop_toBottomOf="@+id/developerview"
        android:background="@color/colorPrimary"/>

</androidx.constraintlayout.widget.ConstraintLayout>